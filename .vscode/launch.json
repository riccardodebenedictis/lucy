{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/lucy.exe",
            "args": [
                "output.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build",
            "environment": [
                {
                    "name": "PATH",
                    "value": "%PATH%;${workspaceRoot}/build/smt-lib;${workspaceRoot}/build/core-lib;${workspaceRoot}/build/cg-lib;C:/Program Files (x86)/LIBANTLR4/lib"
                }
            ],
            "externalConsole": true,
            "visualizerFile": "${workspaceRoot}/lucy.natvis"
        }
    ]
}